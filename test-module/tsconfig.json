{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"#app": [
			  "../node_modules/nuxt3/dist/app"
			],
			"#app/*": [
			  "../node_modules/nuxt3/dist/app/*"
			]
		},
		"declaration": true,
    	"outDir": "./dist",
		"target": "ESNext",
        "module": "ESNext",
        "strict": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true
	}
}
